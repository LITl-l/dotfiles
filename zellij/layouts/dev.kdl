// Development Layout
// Editor on left, terminal on right

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="dev" focus=true split_direction="vertical" {
        pane size="70%" {
            name "editor"
        }
        pane size="30%" split_direction="horizontal" {
            pane size="50%" {
                name "terminal"
            }
            pane size="50%" {
                name "watch"
            }
        }
    }

    tab name="git" {
        pane {
            name "lazygit"
            command "lazygit"
        }
    }

    tab name="terminal" {
        pane
    }
}
